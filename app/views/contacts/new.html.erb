<div id="contact"></div>

<div class="wrapper bg-marron-light">
  <%= simple_form_for @contact do |f| %>
    <div class="container">
      <div class="content p-5 text-center">
        <h2>Contact</h2>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="d-flex justify_content-center">
            <p class="p-2">Prénom :</p>
            <div class="flex-1-auto">
              <%= f.input :first_name, label: false %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="d-flex justify_content-center">
            <p class="p-2">Nom :</p>
            <div class="flex-1-auto">
              <%= f.input :last_name, label: false %>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="d-flex justify_content-center">
            <p class="p-2">Email :</p>
            <div class="flex-1-auto">
              <%= f.input :email, label: false %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="d-flex justify_content-center">
            <p class="p-2">Âge : </p>
            <div class="flex-1-auto">
              <%= f.input :age, label: false %>
            </div>
          </div>
        </div>
        <div class="col-12">
          <%= f.input :hp, as: :radio_buttons, label: 'Diagnostiqué Haut Potentiel' %>
        </div>

        <div class="col-md-12">
          <h3>je souhaite vous contacter pour :</h3>
        </div>

        <div class="col-md-6">
          <%= f.input :rdv,
                      collection: [
                        ["me faire bilanter", :bilan],
                        ["suivre un accompagnement sur mon haut potentiel", :suivi],
                        ["Autre", :other]
                      ],
                      as: :radio_buttons, label: "Prendre rendez-vous" %>
        </div>
        <div class="col-md-6">
          <div class="d-flex justify_content-center">
            <p class="p-2">Si "Autre", précider : </p>
            <div class="flex-1-auto">
              <%= f.input :rdv_other, label: false %>
            </div>
          </div>
        </div>
        <div class="col-12">
          <%= f.input :informations, label: "Pour vous demander des renseignements :" %>
        </div>
        <div class="col-12">
          <%= f.input :other, label: "Pour une autre raison :" %>
        </div>
        <div class="col-12">
          <%= f.input :complement, label: "Complément d'information" %>
        </div>

        <div class="text-center w-100">
          <%= f.button :submit, class: "btn btn-red" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


